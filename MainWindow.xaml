<Window x:Class="CodingAlgorithmsVisualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Coding Algorithms Visualizer" Height="350" Width="525">
    <Grid Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="82*"/>
            <ColumnDefinition Width="93*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Margin="10,10,10,10" Grid.ColumnSpan="2">
            <Grid>
                <TextBox Name="InputTextBox" Width="400" Height="30" Margin="0,0,0,10" TextChanged="InputTextBox_TextChanged"/>
                <TextBlock Name="PlaceholderTextBlock" Text="Enter text here..." 
                           Foreground="Gray" 
                           VerticalAlignment="Center" 
                           Margin="5,0,0,0" 
                           IsHitTestVisible="False"/>
            </Grid>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <RadioButton Name="RleRadioButton" Content="RLE" GroupName="Algorithm" Margin="0,0,10,0" FontWeight="Bold"/>
                <RadioButton Name="HuffmanRadioButton" Content="Huffman" GroupName="Algorithm" Margin="0,0,10,0" FontWeight="Bold"/>
                <RadioButton Name="CabacRadioButton" Content="CABAC" GroupName="Algorithm" FontWeight="Bold"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                <Button x:Name="EncodeButton" Content="Apply ENcoding" Width="150" Height="30" Click="EncodeButton_Click" Margin="0,0,00,0"/>
                <Button x:Name="DecodeButton" Content="Apply DEcoding" Width="150" Height="30" Click="DecodeButton_Click"/>
            </StackPanel>

            <Label Content="Encoded data" Margin="0,10,0,0" Foreground="Red" FontWeight="Bold"/>
            <TextBox x:Name="EncOutputTextBox" Width="400" Height="47" IsReadOnly="True" Foreground="Red" FontWeight="Bold"/>
            <Label x:Name="___No_Name_" Content="Decoded data" FontWeight="Bold" Foreground="Green"/>
            <TextBox x:Name="DecOutputTextBox" Width="400" Height="47" IsReadOnly="True" FontWeight="Bold" Background="White" Foreground="Green"/>
        </StackPanel>
    </Grid>
</Window>